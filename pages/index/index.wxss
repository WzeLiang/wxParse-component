/* pages/activity/activityInfo/activityInfo.wxss */
page{
  background: #f7f7f7;
}
.goodsInfo{

}
.head-msg{
  height: 150rpx;
  padding: 25rpx 30rpx;
  background: #ffffff;
}
.head-msg .msg-name{
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.head-msg .msg-name image{
  width: 37rpx;
  height: 37rpx;
}
.head-msg .msg-desc{
  font-size: 26rpx;
  color: #999999;
}
.price{
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 30rpx;
}
.price .numb{
  font-size: 44rpx;
  font-weight: bold;
    color: #f39700;
 
}
.price .buynumber{
  font-size: 28rpx;
  color: #999999;
}
.price .numb text{
  font-size: 28rpx;
  text-decoration: line-through;
 color: #999999;
  margin-left: 20rpx;
}

.comment{
  margin-top: 15rpx;
  background: #ffffff;
  padding: 20rpx 0;
}
.comment .title{
  padding:0 30rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.comment .more{
  font-size: 24rpx;
  color: #b4b4b4;
  display: flex;
  align-items: center;
  justify-content: center;
}
.comment .no-comment{
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}
.info{
   margin-top: 15rpx;
  background: #ffffff;
}
.info .title{
  padding:0 30rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}
.bottom-box{
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.bottom-box .call{
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 155rpx;
  
}
.bottom-box .call image{
  width: 37rpx;
  height: 37rpx;
}
.bottom-box .share{
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 155rpx;
}
.bottom-box .share image{
  width: 37rpx;
  height: 37rpx;
}
.bottom-box .gobuy{
  width: 100%;
  height: 100rpx;
  color: #ffffff;
  background: #f39700;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}